{
  "productName": "TypeWinner",
  "version": "1.0.0",
  "identifier": "com.typewinner.app",
  "build": {
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build",
    "devUrl": "http://localhost:1420",
    "frontendDist": "../dist"
  },
  "plugins": {
    "shell": {
      "open": true
    }
  },
  "app": {
    "windows": [
      {
        "label": "main",
        "title": "TypeWinner",
        "width": 500,
        "height": 420,
        "resizable": false,
        "alwaysOnTop": true,
        "decorations": false,
        "transparent": false,
        "skipTaskbar": false
      }
    ],
    "security": {
      "csp": "default-src 'self' http://localhost:* ws://localhost:*; script-src 'self' 'unsafe-inline' 'unsafe-eval' http://localhost:*; style-src 'self' 'unsafe-inline' http://localhost:*; font-src 'self' data: https://fonts.googleapis.com; img-src 'self' data: https:; connect-src 'self' https: http://localhost:* ws://localhost:*;",
      "capabilities": ["main-capability"]
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "resources": [
      "../src/main/utils/puppeteer-node.cjs"
    ],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/256x256.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "macOS": {
      "frameworks": [],
      "minimumSystemVersion": "10.13",
      "exceptionDomain": "",
      "signingIdentity": null,
      "entitlements": null
    },
    "windows": {
      "certificateThumbprint": null,
      "digestAlgorithm": "sha256",
      "timestampUrl": ""
    }
  }
}
